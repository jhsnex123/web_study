<body>
	<h1>이벤트 모델-인라인</h1>
	<hr>
	<button id="bt1", onclick="update1();">빨강색</button>
	<button id="bt2", onclick="update2();">파랑색</button>
	<button id="bt3", onclick="update3();">노랑색</button><br>
	<hr>
	<h3 id='dateDisplay'></h3>
	<script>
	window.onload=function(){
		const date = new Date();
		const month = date.getMonth()+1;
		const day = date.getDate();          // 자바스크립트 date 검색
		document.getElementById("dateDisplay"). innerText = '오늘은 ${month}월 ${day}일입니다';        
	};
	console.log(document.body);
		const dom = document.getElementsByTagName("div")[0];
		function update(num) {
			if (num == 1)
        		dom.innerHTML = "<h2>테스트하자</h2>";
			else if (num == 2)
        		dom.textContent = "<h2>테스트하자</h2>";
			else
        		dom.innerHTML += "<h2>테스트하자</h2>";
        		//dom.innerHTML = dom.innerHTML + "<h2>테스트하자</h2>";
		}
	</script>
